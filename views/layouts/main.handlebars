</head>
<body>
  <header>
    <nav class="teal lighten-2" role="navigation">
      <div class="nav-wrapper">
        <a href="/" class="brand-logo logo-link">PFF</a>
        <a href="#" data-target="mobile-menu" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down nav-links">
          {{#if logged_in}}
          <li><a href="/swipe">Find Friends!</a></li>
          <li><a class="dropdown-trigger" href="#!" data-target="profile">Profile<i class="material-icons right">arrow_drop_down</i></a></li>
          <ul id="profile" class="dropdown-content">
            <li><a href="/profile">Dashboard</a></li>
            <li><a href="/matched">Your Friends<span class="new badge">4</span></a></li>
          </ul>
          <li><a class="logout" href="">Logout</a></li>
          {{else}}
          <li><a href="/signup" class="white-text">Sign Up</a></li>
          <li><a href="/login" class="white-text">Log In</a></li>
          {{/if}}
        </ul>
      </div>
    </nav>
    {{#if logged_in}}
    <ul class="sidenav" id="mobile-menu">
      <li><a class="mobile-nav-link" href="/swipe">Find Friends</a></li>
      <li><a class="mobile-nav-link" href="/profile">Profile</a></li>
      <li><a class="mobile-nav-link" href="/matched">Your Friends</a></li>
      <li><a class="mobile-nav-link logout" href="">Logout</a></li>
    </ul>
    {{else}}
    <ul class="sidenav" id="mobile-menu">
      <li><a class="mobile-nav-link" href="/signup">Sign Up</a></li>
      <li><a class="mobile-nav-link" href="/login">Log In</a></li>
    </ul>
    {{/if}}
  </header>


    
  <main >
    {{{body}}}
  </main>

